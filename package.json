{
  "name": "myreads",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/rafaelmaiach/myreads"
  },
  "license": "MIT",
  "author": {
    "name": "Rafael Maia Chieregatto",
    "email": "rafaelmaiach@gmail.com",
    "url": "https://rafaelmaiach.github.io/"
  },
  "scripts": {
    "start": "cross-env-shell NODE_ENV=development NODE_PATH=src node scripts/start.js",
    "build": "cross-env-shell NODE_ENV=production NODE_PATH=src node scripts/build.js",
    "prod-start": "serve -s ./build",
    "now-start": "serve --single ./build",
    "test": "node scripts/test.js --env=jsdom",
    "lint": "cross-env-shell NODE_ENV=development NODE_PATH=src eslint .",
    "lint-fix": "cross-env NODE_ENV=development eslint . --fix",
    "flow": "flow"
  },
  "dependencies": {
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "babel-plugin-dynamic-import-node": "2.0.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "babel-plugin-transform-react-constant-elements": "6.23.0",
    "babel-plugin-transform-react-inline-elements": "6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.15",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-react-app": "3.1.2",
    "babel-preset-stage-0": "6.24.1",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "clean-webpack-plugin": "0.1.19",
    "cross-env": "^5.2.0",
    "css-loader": "0.28.7",
    "dotenv": "6.0.0",
    "dotenv-expand": "4.2.0",
    "eslint": "5.4.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-import-resolver-webpack": "0.10.0",
    "eslint-loader": "2.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-react": "7.11.1",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "firebase": "5.4.0",
    "flow-bin": "0.79.1",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "node-sass": "4.9.3",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.8",
    "promise": "8.0.1",
    "raf": "3.4.0",
    "react": "16.4.2",
    "react-dev-utils": "5.0.1",
    "react-dom": "16.4.2",
    "react-router-dom": "4.3.1",
    "recompose": "0.28.2",
    "resolve": "1.6.0",
    "sass-loader": "7.1.0",
    "serve": "10.0.0",
    "style-loader": "0.19.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3",
    "yup": "0.26.2",
    "zxcvbn": "4.4.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  }
}
